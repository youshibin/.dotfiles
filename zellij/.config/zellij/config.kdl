// Zellij Configuration
// Docs: https://zellij.dev/documentation/

// ============================================================================
// GENERAL SETTINGS
// ============================================================================

// Default shell
default_shell "zsh"

// Scrollback buffer size
scroll_buffer_size 10000

// ============================================================================
// UI SETTINGS
// ============================================================================

// Simplified UI - hide some elements for cleaner look
simplified_ui false

// Pane frames (borders around panes)
pane_frames true

// Auto-layout (automatically arrange panes)
auto_layout true

// ============================================================================
// MOUSE SUPPORT
// ============================================================================
mouse_mode true

// ============================================================================
// KEYBINDINGS
// ============================================================================
keybinds {
}

// ============================================================================
// PLUGINS
// ============================================================================
load_plugins {
}

// ============================================================================
// THEMES
// ============================================================================
// You can add custom themes here or use built-in ones
themes {
}
